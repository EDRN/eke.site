<html xmlns='http://www.w3.org/1999/xhtml'
    xml:lang='en'
    lang='en'
    xmlns:tal='http://xml.zope.org/namespaces/tal'
    xmlns:metal='http://xml.zope.org/namespaces/metal'
    xmlns:i18n='http://xml.zope.org/namespaces/i18n'
    metal:use-macro='context/main_template/macros/master'
    i18n:domain='eke.people'>
    <head>
        <title>Person</title>
    </head>
    <body>
        <metal:main fill-slot='main'>
            <tal:main-macro metal:define-macro='main'>
                <div tal:replace='structure provider:plone.abovecontenttitle' />
                <h1 class='documentFirstHeading'>
                    <metal:field use-macro='python:context.widget("title", mode="view")'>
                        Title
                    </metal:field>
                </h1>
		<span tal:condition='context/edrnTitle'>
		    Title:  <metal:field use-macro='python:context.widget("edrnTitle", mode="view")'>Principle Investigator</metal:field>
		</span>
                <div tal:replace='structure provider:plone.belowcontenttitle' />
                <p class='documentDescription'>
                    <metal:field use-macro='python:context.widget("description", mode="view")'>Description.</metal:field>
                </p>
                <div tal:replace='structure provider:plone.abovecontentbody' />
				<div class='investigatorPhoto' tal:condition='context/image_mini|nothing'
				    tal:define='here_url context/@@plone_context_state/object_url;'>
					<a href='#' tal:attributes='href string:$here_url/image/image_view_fullscreen'>
						<img tal:replace='structure python:context.tag(scale="mini", css_class="newsImage")'
							src='#' alt='Photo'/>
					</a>
				</div>
		<h4>Contact Information</h4>
		<table class="contact-info">
		  <tr>
		    <th>Name:</th>
		    <td>
			<span tal:replace='context/givenName'>Apu</span>&nbsp;
			<span tal:replace='context/middleName'>S.</span>&nbsp;
			<span tal:replace='context/surname'>Nahasapeemapteilon</span>
		    </td>
		  </tr>
		  <tr>
		    <th>Telephone:</th>
		    <td>
			<span tal:replace='context/phone'>+1 555 555 1212</span>
		    </td>
		  </tr>
		  <tr>
		    <th>Fax:</th>
		    <td>
			<span tal:replace='context/fax'>+1 555 555 1212</span>
		    </td>
		  </tr>
		  <tr>
		    <th>Email:</th>
		    <td>
				<a href='#' tal:attributes='href context/mbox' tal:content='context/mbox'>apu69@aol.com</a>
		    </td>
		  </tr>
		</table>	
		<div>
		    <label for='parent-fieldname-edrnTitle' i18n:translate='label_edrnTitle'>EDRN Title:</label>
		    <metal:field use-macro='python:context.widget("edrnTitle", mode="view")'>Grand Poobah</metal:field>
		</div>
		<div>
		    <label for='parent-fieldname-specialty' i18n:translate='label_specialty'>Specialty:</label>
		    <metal:field use-macro='python:context.widget("specialty", mode="view")'>Poobahing.</metal:field>
		</div>
        <div>
            <label for='parent-fieldname-accountName' i18n:translate='label_accountName'>EDRN Account Name:</label>
            <metal:field use-macro='python:context.widget("accountName", mode="view")'>lolcat1234</metal:field>
        </div>
        
                <div tal:replace='structure provider:plone.belowcontentbody' />
            </tal:main-macro>
        </metal:main>
    </body>
</html>
